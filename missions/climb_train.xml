<?xml version="1.0" encoding="UTF-8"?>
<Mission xmlns="http://ProjectMalmo.microsoft.com"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <About>
    <Summary>Entrenamiento de escalada: escalera limpia para Q-learning.</Summary>
  </About>

  <ModSettings>
    <MsPerTick>50</MsPerTick>
  </ModSettings>

  <ServerSection>
    <ServerInitialConditions>
      <Time>
        <StartTime>6000</StartTime>
        <AllowPassageOfTime>false</AllowPassageOfTime>
      </Time>
      <Weather>clear</Weather>
      <AllowSpawning>false</AllowSpawning>
    </ServerInitialConditions>

    <ServerHandlers>
      <FlatWorldGenerator generatorString="3;7,220*1,5*3,2;3;,biome_1"/>
      <DrawingDecorator>
        <DrawCuboid x1="-4" y1="227" z1="-4" x2="14" y2="227" z2="4" type="lava"/>
        <DrawCuboid x1="-1" y1="227" z1="-2" x2="11" y2="227" z2="2" type="stone"/>
        <DrawCuboid x1="-3" y1="227" z1="-2" x2="0" y2="227" z2="2" type="stone"/>
        <DrawCuboid x1="-1" y1="228" z1="-3" x2="11" y2="235" z2="-3" type="glass"/>
        <DrawCuboid x1="-1" y1="228" z1="3" x2="11" y2="235" z2="3" type="glass"/>

        <DrawCuboid x1="1" y1="228" z1="-2" x2="1" y2="228" z2="2" type="stone"/>
        <DrawCuboid x1="2" y1="229" z1="-2" x2="2" y2="229" z2="2" type="stone"/>
        <DrawCuboid x1="3" y1="230" z1="-2" x2="3" y2="230" z2="2" type="stone"/>
        <DrawCuboid x1="4" y1="231" z1="-2" x2="4" y2="231" z2="2" type="stone"/>
        <DrawCuboid x1="5" y1="232" z1="-2" x2="5" y2="232" z2="2" type="stone"/>
        <DrawCuboid x1="6" y1="233" z1="-2" x2="6" y2="233" z2="2" type="gold_block"/>
      </DrawingDecorator>
      <ServerQuitFromTimeUp description="" timeLimitMs="90000"/>
      <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>

  <AgentSection mode="Survival">
    <Name>Agente</Name>
    <AgentStart>
      <Placement x="0.5" y="228.0" z="0.5" yaw="0" pitch="0"/>
    </AgentStart>

    <AgentHandlers>
      <ContinuousMovementCommands turnSpeedDegs="180"/>
      <MissionQuitCommands/>
      <ObservationFromFullStats/>
      <ObservationFromGrid>
        <Grid name="floor5x5">
          <min x="-2" y="-1" z="-2"/>
          <max x="2" y="-1" z="2"/>
        </Grid>
      </ObservationFromGrid>
      <ObservationFromRay/>
      <VideoProducer want_depth="false">
        <Width>320</Width>
        <Height>240</Height>
      </VideoProducer>
      <RewardForTouchingBlockType>
        <Block type="lava" reward="-10"/>
      </RewardForTouchingBlockType>
      <RewardForReachingPosition>
        <Marker oneshot="true" reward="15" tolerance="0.6" x="2.5" y="230.0" z="0.5"/>
        <Marker oneshot="true" reward="20" tolerance="0.6" x="4.5" y="232.0" z="0.5"/>
        <Marker oneshot="true" reward="120" tolerance="0.6" x="6.5" y="234.0" z="0.5"/>
      </RewardForReachingPosition>
      <AgentQuitFromReachingPosition>
        <Marker tolerance="0.6" x="6.5" y="234.0" z="0.5"/>
      </AgentQuitFromReachingPosition>
    </AgentHandlers>
  </AgentSection>
</Mission>
